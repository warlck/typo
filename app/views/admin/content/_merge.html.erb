<% if @article and @article.id != nil %>
	<h4>Merge Articles</h4>
	<% form_tag(merge_path(@article.id), method: "post", 
	            name: "merge_with") do %>
	  <%= label_tag(:merge_id, "Article ID", id: "merge_label") %>
	  <%= text_field_tag(:merge_id) %> <br>
	  <%= submit_tag "Merge" %>
	<% end %>
<% end %>
<%= debug(params) if Rails.env.development? %>